{
  "properties": {
    "display_name": "Brave Search",
    "repository": "https://github.com/modelcontextprotocol/servers/blob/main/src/brave-search",
    "license": "MIT License",
    "tags": [
      "search",
      "web",
      "local"
    ],
    "installations": {
      "docker": {
        "type": "docker",
        "command": "docker run -i --rm -e BRAVE_API_KEY",
        "args": [
          "mcp/brave-search"
        ],
        "description": "Run the Brave Search server using Docker",
        "env": {
          "BRAVE_API_KEY": "<APIKEY>"
        }
      },
      "npx": {
        "type": "npm",
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-brave-search"
        ],
        "description": "Run the Brave Search server using npx",
        "env": {
          "BRAVE_API_KEY": "<APIKEY>"
        }
      }
    },
    "arguments": {
      "apiKey": {
        "description": "Brave Search API key",
        "required": true,
        "example": "<APIKEY>"
      }
    },
    "examples": [
      {
        "title": "Web Search",
        "description": "Search the web",
        "prompt": "pizza near me"
      },
      {
        "title": "Local Search",
        "description": "Find local businesses and services",
        "prompt": "restaurants in New York"
      }
    ]
  },
  "name": "brave-search",
  "repository": {
    "type": "git",
    "url": "https://github.com/modelcontextprotocol/servers/blob/main/src/brave-search"
  },
  "homepage": "https://github.com/modelcontextprotocol/servers/blob/main/src/brave-search",
  "author": {
    "name": "modelcontextprotocol"
  },
  "description": "An MCP server implementation that integrates the Brave Search API, providing both web and local search capabilities.",
  "categories": [
    "Web Services"
  ],
  "installations": {},
  "is_official": true
}